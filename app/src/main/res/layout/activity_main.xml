<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    tools:context="android.example.com.aakashmodel.MainActivity">

    <Button
        android:id="@+id/add_report_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Report Card" />

    <Button
        android:id="@+id/remove_report_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Report Card" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Cards"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="all"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/mainReportCardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp" />
</LinearLayout>